@{
    ViewData["Title"] = "Home Page";
}

@section Slider{
             <!-- slider section -->
         <section class="slider_section ">
            <div class="slider_bg_box">
               <img src="~/images/slider-bg.jpg" alt="">
            </div>
            <div id="customCarousel1" class="carousel slide" data-ride="carousel">
               <div class="carousel-inner">
                  <div class="carousel-item active">
                     <div class="container ">
                        <div class="row">
                           <div class="col-md-7 col-lg-6 ">
                              <div class="detail-box">
                                 <h1>
                                    <span>
                                    Core 2
                                    </span>
                                    <br>
                                    Intro to EF
                                 </h1>
                                 <p>
                                    Entity Framework (EF) is an Object Relational Mapper (ORM) for .NET.  It helps to convert database tables and columns into C# classes and properties, or vice versa.
                                 </p>
                                 <div class="btn-box">
                                    <a href="https://docs.microsoft.com/en-us/ef/" class="btn1">
                                        Docs
                                    </a>
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
                  <div class="carousel-item ">
                     <div class="container ">
                        <div class="row">
                           <div class="col-md-7 col-lg-6 ">
                              <div class="detail-box">
                                 <h1>
                                    <span>
                                    Identity Framework
                                    </span>
                                    <br>
                                    Manage users and roles
                                 </h1>
                                 <p>
                                    ASP.NET Core Identity (Identity Samples/Identity Framework) is an API.  We can consume Identity to gain functionality to register users and scaffold out functionality related to users and roles.
                                 </p>
                                 <div class="btn-box">
                                    <a href="https://docs.microsoft.com/en-us/aspnet/core/security/authentication/identity?view=aspnetcore-6.0&tabs=visual-studio" class="btn1">
                                        Docs
                                    </a>
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
                  <div class="carousel-item">
                     <div class="container ">
                        <div class="row">
                           <div class="col-md-7 col-lg-6 ">
                              <div class="detail-box">
                                 <h1>
                                    <span>
                                    File
                                    </span>
                                    <br>
                                    Upload
                                 </h1>
                                 <p>
                                    Allow users to upload a file to our web server.  When doing this we store the physical file on the web server (typically in wwwroot), and the file name in the database.
                                 </p>
                                 <div class="btn-box">
                                    <a href="https://docs.microsoft.com/en-us/aspnet/core/mvc/models/file-uploads?view=aspnetcore-6.0" class="btn1">
                                        Docs
                                    </a>
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
                  <div class="carousel-item">
                     <div class="container ">
                        <div class="row">
                           <div class="col-md-7 col-lg-6 ">
                              <div class="detail-box">
                                 <h1>
                                    <span>
                                    Utility
                                    </span>
                                    <br>
                                    Classes
                                 </h1>
                                 <p>
                                    Utility classes are static classes that house static methods for functionality.  We use the ImageUtility class to resize and create a thumbnail of our image uploads.
                                 </p>
                                 <div class="btn-box">
                                    <a href="https://docs.microsoft.com/en-us/dotnet/csharp/programming-guide/classes-and-structs/static-classes-and-static-class-members" class="btn1">
                                        Docs
                                    </a>
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>

               </div>
               <div class="container">
                  <ol class="carousel-indicators">
                     <li data-target="#customCarousel1" data-slide-to="0" class="active"></li>
                     <li data-target="#customCarousel1" data-slide-to="1"></li>
                     <li data-target="#customCarousel1" data-slide-to="2"></li>
                     <li data-target="#customCarousel1" data-slide-to="3"></li>
                  </ol>
               </div>
            </div>
         </section>
         <!-- end slider section -->
}


      <!-- why section -->
      <section class="why_section layout_padding">
         <div class="container">
            <div class="heading_container heading_center">
               <h2>
                  .NET MVC Web App
               </h2>
            </div>
            <div class="row">
               <div class="col-md-4">
                  <div class="box ">
                     <div class="img-box">
                         <i class="fa fa-building-o fa-3x" aria-hidden="true"></i>
                     </div>
                     <div class="detail-box">
                        <h5>
                           Two-Tier
                        </h5>
                        <p>
                           Projects are separated into a DATA tier, and a UI tier.
                        </p>
                     </div>
                  </div>
               </div>
               <div class="col-md-4">
                  <div class="box ">
                     <div class="img-box">
                         <i class="fa fa-database fa-3x" aria-hidden="true"></i>
                     </div>
                     <div class="detail-box">
                        <h5>
                           Data-Driven
                        </h5>
                        <p>
                           Information in this app is dynamic.
                        </p>
                     </div>
                  </div>
               </div>
               <div class="col-md-4">
                  <div class="box ">
                     <div class="img-box">
                         <i class="fa fa-lock fa-3x" aria-hidden="true"></i>
                     </div>
                     <div class="detail-box">
                        <h5>
                           Secure
                        </h5>
                        <p>
                           Various CRUD functions locked down based on user roles.
                        </p>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </section>
      <!-- end why section -->
      
      <!-- arrival section -->
      <section class="arrival_section">
         <div class="container">
            <div class="box">
               <div class="arrival_bg_box">
                  <img src="~/images/arrival-bg.png" alt="">
               </div>
               <div class="row">
                  <div class="col-md-6 ml-auto">
                     <div class="heading_container remove_line_bt">
                        <h2>
                           #ShoppingCart
                        </h2>
                     </div>
                     <p style="margin-top: 20px;margin-bottom: 30px;">
                        This project demos a shopping cart that persists cart contents using Session until an order is submitted - which then creates an Order record that is saved to the database.
                     </p>
                     <a href="">
                     Shop Now
                     </a>
                  </div>
               </div>
            </div>
         </div>
      </section>
      <!-- end arrival section -->
      
