@model IEnumerable<Core2TP.DATA.EF.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>@ViewData["Title"]</h1>

<p>
    @*Once shopping cart is implemented, we will not need this create button.  Leave here for now in case we need to mock a record.*@
    <a asp-action="Create">Add New Order</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipToName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipZip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Orders" asp-action="Details" asp-route-id="@item.OrderId">
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipToName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipState)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipZip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserId)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                    @*<a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |*@
                    <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
